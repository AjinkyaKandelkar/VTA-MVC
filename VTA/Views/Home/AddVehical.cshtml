@{
}
@model UserVehicalDto
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 mt-5">
            <div class="card">
                <div class="card-header text-center fs-4 fw-bold">
                    Register
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Home" asp-action="AddVehical">
                        <div class=" container">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">
                                        Vehicle Number

                                    </label>
                                    <input type="text" class="form-control" asp-for="VehicleNumber" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Vehicle Type
                                    </label>
                                    <input type="number" class="form-control" asp-for="VehicleType" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Chassis Number
                                    </label>
                                    <input type="text" class="form-control" asp-for="ChassisNumber" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Engine Number

                                    </label>
                                    <input type="text" class="form-control" asp-for="EngineNumber" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Manufacturing year
                                    </label>

                                    <input type="text" class="form-control" asp-for="Manufacturingyear" />

                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Load carrying capacity
                                    </label>
                                    <input type="text" class="form-control" asp-for="Loadcarryingcapacity" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Make of vehicle
                                    </label>
                                    <input type="text" class="form-control" asp-for="Makeofvehicle" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">
                                        ModelNumber
                                    </label>
                                    <input type="text" class="form-control" asp-for="ModelNumber" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Bodytype
                                    </label>
                                    <input type="number" class="form-control" asp-for="Bodytype" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">

                                        Organisation Name
                                    </label>
                                    <input type="text" class="form-control" asp-for="Organisationname" />
                                </div>
                            </div>
                        </div>
      
                        <div class="mt-3 text-center">


                            <input class="btn btn-primary" type="submit" value="Add Vehical" />

                

                        </div>


                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
